<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="MichalsRecipesPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>JPAEntities.IngToRecipe</class>
    <class>JPAEntities.Measurements</class>
    <class>JPAEntities.Recipe</class>
    <class>JPAEntities.Ingredients</class>
    <class>JPAEntities.Courses</class>
    <class>JPAEntities.Recipes</class>
    <class>JPAEntities.CourseToRec</class>
    <class>JPAEntities.IngToRec</class>
    <class>JPAEntities.SolidMeasurements</class>
    <properties>
      <property name="hibernate.connection.username" value="Michal"/>
      <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="hibernate.connection.password" value="Michal"/>
      <property name="hibernate.connection.url" value="jdbc:derby://localhost:1527/MichalsRecipes"/>
    </properties>
  </persistence-unit>
</persistence>
